<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@color/c_ffffff"
    >
    <TextView
        android:textColor="@color/c_707070"
        android:id="@+id/tv_seckill"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seckill"
        />
    <TextView
        android:id="@+id/finish"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本场结束剩余"
        />

    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/tv_seckill"
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一场"
        android:textSize="@dimen/sp_16" />
    <ImageView
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:id="@+id/img_seckll_one"
        android:layout_below="@id/tv_next"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/ic_launcher_background"
        />
    <TextView
        android:id="@+id/tv_seckill_one_circle"
        android:layout_marginLeft="@dimen/dp_130"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/tv_next"
        android:textColor="@color/c_ffffff"
        android:gravity="center"
        android:text="￥60元"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/home_seakill_price"
        />


   <TextView
       android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_50"
       android:textSize="@dimen/sp_20"
       android:text="99"
       android:layout_below="@id/img_seckll_one"
       android:id="@+id/tv_seckill_one_price"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/tv_seckill_one_price"
        android:text="fdsafdsa"
        android:id="@+id/tv_seckill_one_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@id/tv_seckill_one_title"
        android:text="fdsafdsa"
        android:id="@+id/tv_seckill_one_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_toRightOf="@id/img_seckll_one"
        android:layout_alignTop="@id/img_seckll_one"
        android:id="@+id/img_seckll_two"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/ic_launcher_background"
        />
    <TextView
        android:id="@+id/tv_seckill_two_circle"
        android:layout_marginLeft="@dimen/dp_120"
        android:layout_toRightOf="@id/tv_seckill_one_circle"
        android:layout_alignTop="@id/tv_seckill_one_circle"
        android:textColor="@color/c_ffffff"
        android:gravity="center"
        android:text="￥60元"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/home_seakill_price"
        />

    <TextView
        android:layout_toRightOf="@id/img_seckll_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_50"
        android:textSize="@dimen/sp_20"
        android:text="9fdsaf9"
        android:layout_below="@id/img_seckll_one"
        android:id="@+id/tv_seckill_two_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <TextView
       android:layout_alignLeft="@id/tv_seckill_two_price"
       android:layout_below="@id/tv_seckill_two_price"
        android:id="@+id/tv_seckill_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdsafdsa" />
    <TextView
        android:layout_alignLeft="@id/tv_seckill_two_title"
         android:layout_below="@id/tv_seckill_two_title"
         android:text="fdsafdsa"
         android:id="@+id/tv_seckill_two_content"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
</RelativeLayout>
